@model Presentacion.Modelos.ModeloError
@{
    ViewData["Title"] = "Error";
}

<h1 class="text-danger">Error.</h1>
<h2 class="text-danger">Ocurrió un error al procesar la solicitud.</h2>

@if (Model.MostrarIdSolicitud)
{
    <p>
        <strong>ID de solicitud:</strong> <code>@Model.idSolicitud</code>
    </p>
}

<h3>Modo de desarrollo</h3>
<p>
    Al cambiar al entorno <strong>Development</strong> se mostrará más información sobre el error.
</p>
<p>
    <strong>No habilite Development en producción.</strong>
    Puede exponer información sensible de excepciones.
</p>
